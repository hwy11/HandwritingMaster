/* components/textEditor/textEditor.wxss */

.text-editor {
  width: 100%;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.editor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.text-count {
  font-size: 24rpx;
  color: #999;
}

.count-exceeded {
  color: #f56c6c;
}

.clear-btn {
  font-size: 24rpx;
  color: #409eff;
  padding: 5rpx 10rpx;
}

.clear-btn:active {
  opacity: 0.7;
}

.editor-content {
  padding: 20rpx;
}

.editor-textarea {
  width: 100%;
  min-height: 240rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}
